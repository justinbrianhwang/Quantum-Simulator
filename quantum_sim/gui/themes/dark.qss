/* ==========================================================================
   Quantum Circuit Simulator - Dark Theme (Catppuccin Mocha)
   ==========================================================================
   Base:      #1e1e2e (background)
   Mantle:    #181825 (darker background)
   Crust:     #11111b (darkest background)
   Surface0:  #313244
   Surface1:  #45475a
   Surface2:  #585b70
   Overlay0:  #6c7086
   Overlay1:  #7f849c
   Text:      #cdd6f4
   Subtext0:  #a6adc8
   Subtext1:  #bac2de
   Lavender:  #b4befe
   Blue:      #89b4fa
   Sapphire:  #74c7ec
   Sky:       #89dceb
   Teal:      #94e2d5
   Green:     #a6e3a1
   Yellow:    #f9e2af
   Peach:     #fab387
   Maroon:    #eba0ac
   Red:       #f38ba8
   Mauve:     #cba6f7
   Pink:      #f5c2e7
   Flamingo:  #f2cdcd
   Rosewater: #f5e0dc
   ========================================================================== */

/* --- Global / QWidget --- */
QWidget {
    background-color: #1e1e2e;
    color: #cdd6f4;
    font-family: "Segoe UI", "Inter", "Noto Sans", sans-serif;
    font-size: 13px;
    selection-background-color: #45475a;
    selection-color: #cdd6f4;
}

QMainWindow {
    background-color: #1e1e2e;
}

QMainWindow::separator {
    background-color: #313244;
    width: 2px;
    height: 2px;
}

QMainWindow::separator:hover {
    background-color: #89b4fa;
}

/* --- QMenuBar --- */
QMenuBar {
    background-color: #181825;
    color: #cdd6f4;
    border-bottom: 1px solid #313244;
    padding: 2px 0px;
}

QMenuBar::item {
    background: transparent;
    padding: 5px 10px;
    border-radius: 4px;
    margin: 1px 2px;
}

QMenuBar::item:selected {
    background-color: #313244;
    color: #cdd6f4;
}

QMenuBar::item:pressed {
    background-color: #45475a;
}

/* --- QMenu --- */
QMenu {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 6px;
    padding: 4px 0px;
}

QMenu::item {
    padding: 6px 30px 6px 20px;
    border-radius: 4px;
    margin: 1px 4px;
}

QMenu::item:selected {
    background-color: #313244;
    color: #cdd6f4;
}

QMenu::item:disabled {
    color: #585b70;
}

QMenu::separator {
    height: 1px;
    background-color: #313244;
    margin: 4px 8px;
}

QMenu::indicator {
    width: 16px;
    height: 16px;
    margin-left: 4px;
}

QMenu::icon {
    margin-left: 6px;
}

/* --- QToolBar --- */
QToolBar {
    background-color: #181825;
    border-bottom: 1px solid #313244;
    padding: 3px;
    spacing: 4px;
}

QToolBar::separator {
    width: 1px;
    background-color: #313244;
    margin: 4px 6px;
}

QToolBar QToolButton {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 4px 6px;
    color: #cdd6f4;
    margin: 1px;
}

QToolBar QToolButton:hover {
    background-color: #313244;
    border: 1px solid #45475a;
}

QToolBar QToolButton:pressed {
    background-color: #45475a;
}

QToolBar QToolButton:checked {
    background-color: #313244;
    border: 1px solid #89b4fa;
}

/* --- QPushButton --- */
QPushButton {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 6px;
    padding: 6px 16px;
    min-height: 18px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #45475a;
    border-color: #585b70;
}

QPushButton:pressed {
    background-color: #585b70;
    border-color: #6c7086;
}

QPushButton:disabled {
    background-color: #1e1e2e;
    color: #585b70;
    border-color: #313244;
}

QPushButton:focus {
    border-color: #89b4fa;
    outline: none;
}

QPushButton[flat="true"],
QPushButton:flat {
    background-color: transparent;
    border: none;
}

QPushButton[flat="true"]:hover,
QPushButton:flat:hover {
    background-color: #313244;
}

/* Primary action buttons */
QPushButton#primaryButton {
    background-color: #89b4fa;
    color: #1e1e2e;
    border-color: #89b4fa;
    font-weight: 600;
}

QPushButton#primaryButton:hover {
    background-color: #b4befe;
    border-color: #b4befe;
}

QPushButton#primaryButton:pressed {
    background-color: #74c7ec;
    border-color: #74c7ec;
}

/* --- QDockWidget --- */
QDockWidget {
    color: #cdd6f4;
    titlebar-close-icon: none;
    titlebar-normal-icon: none;
}

QDockWidget::title {
    background-color: #181825;
    text-align: left;
    padding: 6px 8px;
    border: 1px solid #313244;
    border-bottom: 2px solid #89b4fa;
    font-weight: 600;
}

QDockWidget::close-button,
QDockWidget::float-button {
    background: transparent;
    border: none;
    padding: 2px;
    icon-size: 14px;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
    background-color: #313244;
    border-radius: 3px;
}

QDockWidget QWidget {
    background-color: #1e1e2e;
}

/* --- QTabWidget / QTabBar --- */
QTabWidget::pane {
    background-color: #1e1e2e;
    border: 1px solid #313244;
    border-top: none;
    border-radius: 0px 0px 6px 6px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar {
    background: transparent;
}

QTabBar::tab {
    background-color: #181825;
    color: #a6adc8;
    border: 1px solid #313244;
    border-bottom: none;
    padding: 7px 16px;
    margin-right: 2px;
    border-radius: 6px 6px 0px 0px;
    min-width: 80px;
}

QTabBar::tab:selected {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border-bottom: 2px solid #89b4fa;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background-color: #313244;
    color: #cdd6f4;
}

QTabBar::tab:disabled {
    color: #585b70;
}

QTabBar::close-button {
    image: none;
    subcontrol-position: right;
}

/* --- QTableWidget / QTableView --- */
QTableWidget,
QTableView {
    background-color: #1e1e2e;
    alternate-background-color: #181825;
    color: #cdd6f4;
    gridline-color: #313244;
    border: 1px solid #313244;
    border-radius: 4px;
    selection-background-color: #313244;
    selection-color: #cdd6f4;
}

QTableWidget::item,
QTableView::item {
    padding: 4px 8px;
    border: none;
}

QTableWidget::item:selected,
QTableView::item:selected {
    background-color: #313244;
    color: #cdd6f4;
}

QTableWidget::item:hover,
QTableView::item:hover {
    background-color: #45475a;
}

/* --- QHeaderView --- */
QHeaderView {
    background-color: #181825;
    border: none;
}

QHeaderView::section {
    background-color: #181825;
    color: #a6adc8;
    border: none;
    border-right: 1px solid #313244;
    border-bottom: 1px solid #313244;
    padding: 6px 8px;
    font-weight: 600;
}

QHeaderView::section:hover {
    background-color: #313244;
    color: #cdd6f4;
}

QHeaderView::section:checked {
    background-color: #313244;
}

QHeaderView::down-arrow {
    width: 10px;
    height: 10px;
}

QHeaderView::up-arrow {
    width: 10px;
    height: 10px;
}

/* --- QGraphicsView --- */
QGraphicsView {
    background-color: #11111b;
    border: 1px solid #313244;
    border-radius: 4px;
}

/* --- QSpinBox / QDoubleSpinBox --- */
QSpinBox,
QDoubleSpinBox {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 20px;
    selection-background-color: #45475a;
}

QSpinBox:hover,
QDoubleSpinBox:hover {
    border-color: #585b70;
}

QSpinBox:focus,
QDoubleSpinBox:focus {
    border-color: #89b4fa;
}

QSpinBox:disabled,
QDoubleSpinBox:disabled {
    background-color: #1e1e2e;
    color: #585b70;
    border-color: #313244;
}

QSpinBox::up-button,
QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    border-left: 1px solid #45475a;
    border-bottom: 1px solid #45475a;
    border-top-right-radius: 4px;
    background-color: #313244;
    width: 20px;
}

QSpinBox::up-button:hover,
QDoubleSpinBox::up-button:hover {
    background-color: #45475a;
}

QSpinBox::down-button,
QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    border-left: 1px solid #45475a;
    border-bottom-right-radius: 4px;
    background-color: #313244;
    width: 20px;
}

QSpinBox::down-button:hover,
QDoubleSpinBox::down-button:hover {
    background-color: #45475a;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow {
    width: 8px;
    height: 8px;
}

QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    width: 8px;
    height: 8px;
}

/* --- QComboBox --- */
QComboBox {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 20px;
    min-width: 60px;
}

QComboBox:hover {
    border-color: #585b70;
}

QComboBox:focus {
    border-color: #89b4fa;
}

QComboBox:disabled {
    background-color: #1e1e2e;
    color: #585b70;
    border-color: #313244;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #45475a;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    background-color: #313244;
}

QComboBox::drop-down:hover {
    background-color: #45475a;
}

QComboBox::down-arrow {
    width: 10px;
    height: 10px;
}

QComboBox QAbstractItemView {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 4px;
    selection-background-color: #313244;
    selection-color: #cdd6f4;
    padding: 4px;
}

QComboBox QAbstractItemView::item {
    padding: 4px 8px;
    border-radius: 3px;
    min-height: 22px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #313244;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #45475a;
}

/* --- QCheckBox --- */
QCheckBox {
    color: #cdd6f4;
    spacing: 8px;
}

QCheckBox:disabled {
    color: #585b70;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #45475a;
    border-radius: 4px;
    background-color: #313244;
}

QCheckBox::indicator:hover {
    border-color: #89b4fa;
    background-color: #45475a;
}

QCheckBox::indicator:checked {
    background-color: #89b4fa;
    border-color: #89b4fa;
}

QCheckBox::indicator:checked:hover {
    background-color: #b4befe;
    border-color: #b4befe;
}

QCheckBox::indicator:disabled {
    background-color: #1e1e2e;
    border-color: #313244;
}

/* --- QRadioButton --- */
QRadioButton {
    color: #cdd6f4;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #45475a;
    border-radius: 10px;
    background-color: #313244;
}

QRadioButton::indicator:hover {
    border-color: #89b4fa;
}

QRadioButton::indicator:checked {
    background-color: #89b4fa;
    border-color: #89b4fa;
}

/* --- QLabel --- */
QLabel {
    color: #cdd6f4;
    background: transparent;
}

QLabel:disabled {
    color: #585b70;
}

QLabel#heading {
    font-size: 16px;
    font-weight: 700;
    color: #cdd6f4;
}

QLabel#subheading {
    font-size: 14px;
    font-weight: 600;
    color: #a6adc8;
}

/* --- QLineEdit --- */
QLineEdit {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 20px;
    selection-background-color: #45475a;
}

QLineEdit:hover {
    border-color: #585b70;
}

QLineEdit:focus {
    border-color: #89b4fa;
}

QLineEdit:disabled {
    background-color: #1e1e2e;
    color: #585b70;
    border-color: #313244;
}

QLineEdit:read-only {
    background-color: #181825;
    border-color: #313244;
}

/* --- QTextEdit / QPlainTextEdit --- */
QTextEdit,
QPlainTextEdit {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 4px;
    padding: 4px;
    selection-background-color: #45475a;
}

QTextEdit:focus,
QPlainTextEdit:focus {
    border-color: #89b4fa;
}

/* --- QScrollBar (Vertical) --- */
QScrollBar:vertical {
    background-color: #1e1e2e;
    width: 12px;
    margin: 0px;
    border: none;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #45475a;
    min-height: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #585b70;
}

QScrollBar::handle:vertical:pressed {
    background-color: #6c7086;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* --- QScrollBar (Horizontal) --- */
QScrollBar:horizontal {
    background-color: #1e1e2e;
    height: 12px;
    margin: 0px;
    border: none;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #45475a;
    min-width: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #585b70;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #6c7086;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
    border: none;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* --- QStatusBar --- */
QStatusBar {
    background-color: #181825;
    color: #a6adc8;
    border-top: 1px solid #313244;
    padding: 2px 8px;
    font-size: 12px;
}

QStatusBar::item {
    border: none;
}

QStatusBar QLabel {
    color: #a6adc8;
    padding: 0px 8px;
}

/* --- QSplitter --- */
QSplitter::handle {
    background-color: #313244;
}

QSplitter::handle:hover {
    background-color: #89b4fa;
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

/* --- QToolBox --- */
QToolBox {
    background-color: #1e1e2e;
    border: none;
}

QToolBox::tab {
    background-color: #181825;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 4px;
    padding: 6px 12px;
    font-weight: 600;
    margin-top: 2px;
}

QToolBox::tab:selected {
    background-color: #313244;
    border-color: #89b4fa;
    color: #89b4fa;
}

QToolBox::tab:hover:!selected {
    background-color: #313244;
    border-color: #45475a;
}

/* --- QGroupBox --- */
QGroupBox {
    background-color: #1e1e2e;
    border: 1px solid #313244;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 16px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 2px 8px;
    color: #a6adc8;
    background-color: #1e1e2e;
    border-radius: 3px;
    left: 10px;
}

/* --- QToolTip --- */
QToolTip {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
}

/* --- QProgressBar --- */
QProgressBar {
    background-color: #313244;
    color: #cdd6f4;
    border: 1px solid #45475a;
    border-radius: 4px;
    text-align: center;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #89b4fa;
    border-radius: 3px;
}

/* --- QSlider --- */
QSlider::groove:horizontal {
    background-color: #313244;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #89b4fa;
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #b4befe;
}

QSlider::groove:vertical {
    background-color: #313244;
    width: 6px;
    border-radius: 3px;
}

QSlider::handle:vertical {
    background-color: #89b4fa;
    width: 16px;
    height: 16px;
    margin: 0 -5px;
    border-radius: 8px;
}

QSlider::handle:vertical:hover {
    background-color: #b4befe;
}

/* --- QDialog --- */
QDialog {
    background-color: #1e1e2e;
}

/* --- QMessageBox --- */
QMessageBox {
    background-color: #1e1e2e;
}

QMessageBox QLabel {
    color: #cdd6f4;
}

/* --- QFrame --- */
QFrame[frameShape="4"],  /* HLine */
QFrame[frameShape="5"] { /* VLine */
    color: #313244;
}

/* --- QListWidget / QListView --- */
QListWidget,
QListView {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 4px;
    padding: 2px;
    outline: none;
}

QListWidget::item,
QListView::item {
    padding: 4px 8px;
    border-radius: 3px;
    margin: 1px;
}

QListWidget::item:selected,
QListView::item:selected {
    background-color: #313244;
    color: #cdd6f4;
}

QListWidget::item:hover,
QListView::item:hover {
    background-color: #45475a;
}

/* --- QTreeWidget / QTreeView --- */
QTreeWidget,
QTreeView {
    background-color: #1e1e2e;
    color: #cdd6f4;
    border: 1px solid #313244;
    border-radius: 4px;
    alternate-background-color: #181825;
}

QTreeWidget::item,
QTreeView::item {
    padding: 4px;
    border: none;
}

QTreeWidget::item:selected,
QTreeView::item:selected {
    background-color: #313244;
}

QTreeWidget::item:hover,
QTreeView::item:hover {
    background-color: #45475a;
}

QTreeView::branch:has-siblings:!adjoins-item {
    border-image: none;
}

QTreeView::branch:has-siblings:adjoins-item {
    border-image: none;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: none;
}

/* --- Scrollbar corner --- */
QAbstractScrollArea::corner {
    background-color: #1e1e2e;
    border: none;
}

/* --- Focus indicators --- */
*:focus {
    outline: none;
}
